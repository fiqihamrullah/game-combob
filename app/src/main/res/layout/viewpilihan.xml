<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
     >
    
        <ImageButton
        android:id="@+id/imgBtnSkor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgVBtnBantuan"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/imgVBtnBantuan"
        android:src="@drawable/btnskor" />

    <ImageButton
        android:id="@+id/imgVBtnBantuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/btnbantuan" />

    <ImageButton
        android:id="@+id/imgVBtnSuara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgVBtnBantuan"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/imgVBtnBantuan"
        android:src="@drawable/btnsuara" />



</RelativeLayout>